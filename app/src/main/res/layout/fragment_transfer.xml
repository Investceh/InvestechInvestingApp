<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Accounts"
        android:background="#F5F5F5">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="377dp"
            android:layout_height="470dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center_horizontal"
            android:id="@+id/linearLayout2">

        <TextView
                android:text="@string/vades_z_hesaplarim"
                android:id="@+id/vadesizHesaplarim"
                android:layout_width="410dp"
                android:layout_height="34dp"
                android:background="@drawable/title_box"
                android:elevation="8dp"
                android:gravity="center"
                android:fontFamily="@font/inter"
                android:textStyle="bold" />

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="88dp"
                app:cardBackgroundColor="#D7E9FF">

            <TextView
                    android:text="\t\tEminönü / İstanbul\n\n\n\t\t3.200 TL"
                    android:layout_width="189dp"
                    android:layout_height="match_parent"
                    android:id="@+id/textView7"
                    android:textColor="#233E5E" />

        </androidx.cardview.widget.CardView>

        <TextView
                android:text="@string/yatirim_hesaplarim"
                android:id="@+id/yatirimHesaplarim"
                android:layout_width="410dp"
                android:layout_height="34dp"
                android:background="@drawable/title_box"
                android:elevation="8dp"
                android:gravity="center"
                android:fontFamily="@font/inter"
                android:textStyle="bold"
                android:layout_marginTop="15dp" />

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="88dp"
                app:cardBackgroundColor="#D7E9FF">

            <TextView
                    android:text="\t\tEminönü / İstanbul\n\n\n\t\t2.500 TL"
                    android:layout_width="189dp"
                    android:layout_height="match_parent"
                    android:id="@+id/textView10"
                    android:textColor="#233E5E" />

        </androidx.cardview.widget.CardView>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:orientation="horizontal"></LinearLayout>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Transferler"
                android:textColor="#BF000000"/>

        <TextView
                android:fontFamily="@font/inter"
                android:id="@+id/vadesizdenyatirima"
                android:text="\tVaadesizden Yatırım Hesabıma Transfer\t\t\t\t\t\t\t\t\t>"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:textColor="#BF000000"
                android:paddingTop="15dp"
                android:clickable="true"
                android:textSize="15sp"
                android:elevation="8dp"
                android:background="#19A1A1A1" />

        <TextView
                android:fontFamily="@font/inter"
                android:id="@+id/yatirimdanvadesize"
                android:text="\tYatırımdan Vadesiz Hesabıma Transfer\t\t\t\t\t\t\t\t\t\t>"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:textColor="#BF000000"
                android:paddingTop="15dp"
                android:clickable="true"
                android:textSize="15sp"
                android:background="#19A1A1A1"
                android:elevation="8dp"
                />

        </LinearLayout>




    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2" app:layout_constraintTop_toTopOf="parent">

        <ImageView
                android:layout_width="153dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/header_logo"
                android:id="@+id/imageView2"
                tools:layout_editor_absoluteX="129dp"
                tools:layout_editor_absoluteY="52dp"
                android:contentDescription="@string/investech" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>