<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.TransferFragment"
        android:orientation="vertical"
        android:background="#f5f5f5">

    <TextView
            android:id="@+id/para_transfer"
            android:text="PARA TRANSFERİ"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:background="@drawable/screen_title"
            />

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#f5f5f5">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:orientation="vertical"
                android:background="#f5f5f5"
                android:paddingLeft="10dp"
                android:layout_marginBottom="5dp">

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    app:cardCornerRadius="8dp">
                    <LinearLayout
                            android:orientation="vertical"
                            android:background="@drawable/bg1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="30dp"
                            android:layout_height="wrap_content">
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            <TextView
                                    android:textSize="24dp"
                                    android:textColor="#ffff"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Ad Soyad"/>
                            <TextView
                                    android:textSize="16dp"
                                    android:textColor="#90ffffff"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Vadesiz Hesabım"/>
                        </LinearLayout>
                        <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                            <ImageView
                                    android:layout_alignParentRight="true"
                                    android:layout_width="40dp"
                                    android:layout_height="60dp"
                                    android:src="@drawable/appicon" />
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:id="@+id/hesap_bilgi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="30dp"
                                android:textColor="#ffff" />
                    </LinearLayout>

                    </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    app:cardCornerRadius="8dp">
                <LinearLayout
                        android:orientation="vertical"
                        android:background="@drawable/bg1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="30dp"
                            android:layout_height="wrap_content">
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            <TextView
                                    android:textSize="24dp"
                                    android:textColor="#ffff"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Ad Soyad"/>
                            <TextView
                                    android:textSize="16dp"
                                    android:textColor="#90ffffff"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Yatırım Hesabım"/>
                        </LinearLayout>
                        <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                            <ImageView
                                    android:layout_alignParentRight="true"
                                    android:layout_width="40dp"
                                    android:layout_height="60dp"
                                    android:src="@drawable/appicon" />
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:id="@+id/yatırım_bilgi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="30dp"
                                android:textColor="#ffff" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
                android:text="İşlem Seçiniz"
                android:gravity="left"
                android:layout_gravity="center"

                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="10sp"
                android:textSize="18sp" />


        <RadioGroup
                android:id="@+id/islem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_gravity="center">

            <RadioButton
                    android:id="@+id/vadesiz_yatırım"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radio_flat_selector_test"
                    android:button="@android:color/transparent"
                    android:text="Vadesiz -> Yatırım"
                    android:paddingLeft="@dimen/_16sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingRight="@dimen/_16sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:textColor="@color/black"
                    app:buttonTint="#293E57"
                    android:layout_marginStart="10dp"/>


            <RadioButton
                    android:id="@+id/yatırım_vadesiz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yatırım  -> Vadesiz"
                    android:background="@drawable/radio_flat_selector_test"
                    android:button="@android:color/transparent"
                    android:paddingLeft="@dimen/_16sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingRight="@dimen/_16sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:textColor="@color/black"
                    app:buttonTint="#293E57"
                    android:layout_marginStart="10dp"/>


        </RadioGroup>

        <EditText
                android:id="@+id/miktar"
                android:translationZ="100dp"
                android:layout_width="400dp"
                android:layout_height="49dp"
                android:textSize="13sp"
                android:background="@drawable/edit_text_view"
                android:inputType="numberDecimal"
                android:autofillHints="Ad"
                android:hint="Miktar"
                android:textColor="@color/black"
                android:textColorHint="#80000000"
                android:paddingStart="20dp"
                tools:ignore="RtlSymmetry"
                android:fontFamily="@font/inter"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="165dp">

            <RadioGroup
                    android:id="@+id/oranlar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <RadioButton
                        android:id="@+id/rg_25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:buttonTint="#293E57"
                        android:text="25%"
                        android:textColor="@color/black"></RadioButton>

                <RadioButton
                        android:id="@+id/rg_50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:buttonTint="#293E57"
                        android:text="50%"
                        android:textColor="@color/black"></RadioButton>

                <RadioButton
                        android:id="@+id/rg_75"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:buttonTint="#293E57"
                        android:text="75%"
                        android:textColor="@color/black"></RadioButton>

                <RadioButton
                        android:id="@+id/rg_100"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:buttonTint="#293E57"
                        android:text="100%"
                        android:textColor="@color/black"></RadioButton>
            </RadioGroup>
        </LinearLayout>

        <Button
                android:id="@+id/btn_tamam"
                android:layout_width="150dp"
                android:layout_height="47dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/button"
                android:text="Tamam"
                android:textColor="#F5F5F5"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="18sp"
                android:fontFamily="@font/inter"
                android:layout_gravity="center"
                android:layout_marginTop="120dp" />

    </LinearLayout>
    </ScrollView>
</LinearLayout>