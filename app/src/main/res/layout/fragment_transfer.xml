<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.TransferFragment"
        android:orientation="vertical"
        android:background="#f5f5f5">

    <TextView
            android:id="@+id/para_transfer"
            android:text="PARA TRANSFERİ"
            android:textColor="#f5f5f5"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:background="@drawable/screen_title"
            />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#f5f5f5">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="278dp"
                android:orientation="vertical"
                android:background="#f5f5f5"
                android:paddingLeft="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="30dp">

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    app:cardCornerRadius="8dp">

                <LinearLayout
                        android:orientation="vertical"
                        android:background="@drawable/bg1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="30dp"
                            android:layout_height="wrap_content">

                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            <TextView
                                    android:textSize="20dp"
                                    android:textColor="#f5f5f5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Merih Yıldırım"
                                    android:fontFamily="@font/inter" />

                            <TextView
                                    android:textSize="16dp"
                                    android:textColor="#90ffffff"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Vadesiz Hesabım" />
                        </LinearLayout>

                        <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                            <ImageView
                                    android:layout_alignParentRight="true"
                                    android:layout_width="40dp"
                                    android:layout_height="60dp"
                                    android:src="@drawable/appicon" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="30dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <TextView
                                android:id="@+id/hesap_bilgi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20dp"
                                android:textColor="#ffff" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    app:cardCornerRadius="8dp">

                <LinearLayout
                        android:orientation="vertical"
                        android:background="@drawable/bg1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="30dp"
                            android:layout_height="wrap_content">

                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            <TextView
                                    android:textSize="20dp"
                                    android:textColor="#f5f5f5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Merih Yıldırım"
                                    android:fontFamily="@font/inter" />

                            <TextView
                                    android:textSize="16dp"
                                    android:textColor="#90ffffff"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Yatırım Hesabım" />
                        </LinearLayout>

                        <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                            <ImageView
                                    android:layout_alignParentRight="true"
                                    android:layout_width="40dp"
                                    android:layout_height="60dp"
                                    android:src="@drawable/appicon" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="30dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <TextView
                                android:id="@+id/yatırım_bilgi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20dp"
                                android:textColor="#ffff" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
                android:text="İşlem Seçiniz"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:textColor="@color/black"
                android:layout_marginBottom="10sp"
                android:textSize="16sp"
                android:fontFamily="@font/inter" />


        <RadioGroup
                android:id="@+id/islem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center">

            <RadioButton
                    android:id="@+id/vadesiz_yatırım"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:textSize="15sp"
                    android:fontFamily="@font/inter"
                    android:gravity="center"
                    android:background="@drawable/radio_flat_selector_test"
                    android:button="@android:color/transparent"
                    android:text="Vadesiz → Yatırım"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:textColor="@color/black"
                    app:buttonTint="#293E57"
                    android:layout_marginEnd="40dp" />


            <RadioButton
                    android:id="@+id/yatırım_vadesiz"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:fontFamily="@font/inter"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:text="Yatırım → Vadesiz"
                    android:background="@drawable/radio_flat_selector_test"
                    android:button="@android:color/transparent"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:textColor="@color/black"
                    app:buttonTint="#293E57"
                    android:layout_marginStart="10dp" />


        </RadioGroup>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingLeft="10dp">

            <EditText
                    android:id="@+id/miktar"
                    android:translationZ="100dp"
                    android:layout_width="270dp"
                    android:layout_height="49dp"
                    android:textSize="13sp"
                    android:background="@drawable/edit_text_view"
                    android:inputType="numberDecimal"
                    android:autofillHints="Ad"
                    android:hint="Transfer miktarı giriniz"
                    android:textColor="@color/black"
                    android:textColorHint="#80000000"
                    android:paddingStart="20dp"
                    tools:ignore="RtlSymmetry"
                    android:fontFamily="@font/inter"
                    android:layout_marginTop="0dp"
                    android:layout_gravity="left"
                    android:layout_marginBottom="25dp" />

            <RadioGroup
                    android:id="@+id/oranlar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <RadioButton
                        android:id="@+id/rg_100"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:buttonTint="#293E57"
                        android:text="Tümünü aktar"
                        android:textColor="@color/black"
                        android:layout_marginTop="2dp" />
            </RadioGroup>

        </LinearLayout>


        <Button
                android:layout_marginRight="20dp"
                android:id="@+id/btn_tamam"
                android:layout_width="180dp"
                android:layout_height="47dp"
                android:background="@drawable/transfer_button"
                android:text="Tamam"
                android:textColor="#F5F5F5"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="16sp"
                android:fontFamily="@font/inter"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp" />


    </LinearLayout>
</LinearLayout>