<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.PiyasaFragment"
        android:background="#F5F5F5">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F5F5F5">

        <TextView
                android:id="@+id/hisseler_alsat"
                android:text="HİSSELER"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/screen_title" />

        <TableLayout
                android:id="@+id/table_layout_g"
                android:layout_width="match_parent"
                android:layout_height="694dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:background="#F5F5F5">

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg5">

                <TextView
                        android:id="@+id/hisseler"
                        android:text="Değişim"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="5sp" />

                <TextView
                        android:id="@+id/adet"
                        android:text="Hisseler"
                        android:layout_width="81dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:gravity="center_horizontal|center_vertical"
                        android:paddingLeft="12sp"
                        android:padding="12sp" />

                <TextView
                        android:id="@+id/fiyat"
                        android:text="Alış"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:gravity="center_vertical"
                        android:paddingLeft="12sp" />

                <TextView
                        android:id="@+id/alıs_satıs"
                        android:text="Satış"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:gravity="center_vertical"
                        android:padding="12sp" />

                <TextView
                        android:text="Fark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView6"
                        android:padding="12sp"
                        android:textColor="@color/white" />

                <TextView
                        android:text="Sat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView14"
                        android:padding="12sp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="3sp" />

                <TextView
                        android:text="Al"
                        android:layout_width="30sp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView21"
                        android:textColor="@color/white"
                        android:layout_marginLeft="30sp" />

            </TableRow>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/piyasa_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
        </TableLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>