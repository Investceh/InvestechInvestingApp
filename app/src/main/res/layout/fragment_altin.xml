<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".fragments.AltinFragment"
        android:background="#F5F5F5">

    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/row_layout_guide__1"
            app:layout_constraintGuide_percent="0.09" />

    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/row_layout_guide__2"
            app:layout_constraintGuide_percent="0.24" />

    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/row_layout_guide__3"
            app:layout_constraintGuide_percent="0.45" />

    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/row_layout_guide__4"
            app:layout_constraintGuide_percent="0.65" />

    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/row_layout_guide__5"
            app:layout_constraintGuide_percent="0.8" />

    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/row_layout_guide__6"
            app:layout_constraintGuide_percent="0.9" />


    <TextView
            android:paddingHorizontal="6dp"
            android:paddingVertical="13dp"
            android:textAlignment="viewStart"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/row_layout_guide__1"
            android:text=""
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/hisse_baslik__1"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:background="#293E57"
            android:fontFamily="@font/inter" />

    <TextView
            android:paddingHorizontal="6dp"
            android:paddingVertical="12dp"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/row_layout_guide__1"
            app:layout_constraintEnd_toEndOf="@id/row_layout_guide__2"
            android:text="Hisse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/hisse_ismi__2"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:background="#293E57"
            android:fontFamily="@font/inter" />

    <TextView
            android:paddingHorizontal="6dp"
            android:paddingVertical="12dp"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/row_layout_guide__2"
            app:layout_constraintEnd_toEndOf="@id/row_layout_guide__3"
            android:text="Alış"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/alis_fiyat__1"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:background="#293E57"
            android:fontFamily="@font/inter" />

    <TextView
            android:paddingHorizontal="6dp"
            android:paddingVertical="12dp"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/row_layout_guide__3"
            app:layout_constraintEnd_toEndOf="@id/row_layout_guide__4"
            android:text="Satış"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/satis_fiyat__3"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:background="#293E57"
            android:fontFamily="@font/inter" />

    <TextView

            android:paddingHorizontal="6dp"
            android:paddingVertical="12dp"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/row_layout_guide__4"
            app:layout_constraintEnd_toEndOf="@id/row_layout_guide__5"
            android:text="Fark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/hisse_fark__1"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:background="#293E57"
            android:fontFamily="@font/inter" />

    <TextView
            android:textColor="@color/white"
            android:paddingHorizontal="6dp"
            android:paddingVertical="12dp"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/row_layout_guide__5"
            app:layout_constraintEnd_toEndOf="@id/row_layout_guide__6"
            android:text="Sat"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/sat_button__1"
            android:background="#293E57"
            android:fontFamily="@font/inter" />

    <TextView
            android:textColor="@color/white"
            android:paddingHorizontal="6dp"
            android:paddingVertical="12dp"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/row_layout_guide__6"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Al"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/al_button__2"
            android:background="#293E57"
            android:fontFamily="@font/inter" />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/piyasa_recyclerView"
            android:layout_marginTop="43sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>