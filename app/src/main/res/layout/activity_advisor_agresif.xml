<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5"
        android:orientation="vertical">

    <TextView
            android:id="@+id/para_transfer"
            android:text="YATIRIMCI PROFİLİ"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:background="@drawable/screen_title"
            />

    <TextView
            android:id="@+id/risk_profili"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AGRESİF"
            android:textColor="@color/black"
            android:gravity="center"
            android:fontFamily="@font/inter"
            android:textSize="20sp"
            android:layout_marginTop="100dp"
            />

    <TextView
            android:id="@+id/aciklama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Risk almaktan çekinmeyen yapınız ve yüksek getiri motivasyonunuz olduğu için size önerimiz"
            android:textColor="@color/black"
            android:gravity="center"
            android:fontFamily="@font/inter"
            android:textSize="16sp"
            android:layout_marginTop="30dp"
            android:padding="50dp"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
        <TextView
                android:id="@+id/öneri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BLABLA"
                android:textColor="@color/black"
                android:gravity="center"
                android:fontFamily="@font/inter"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yatırım aracıdır"
                android:textColor="@color/black"
                android:gravity="center"
                android:fontFamily="@font/inter"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                />

    </LinearLayout>

    <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Devam"
            android:background="@drawable/button"
            android:layout_gravity="center"
            android:layout_marginTop="130dp"/>




</LinearLayout>