<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:layout_margin="10dp"
        android:elevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="432dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg6"
            android:padding="5dp">

        <TextView
                android:id="@+id/title_tv"
                android:layout_width="183dp"
                android:layout_height="23dp"
                tools:text="Android Studio Cardview"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#000000"
                tools:layout_editor_absoluteY="16dp"
                app:layout_constraintEnd_toEndOf="@+id/exp_tv"
                app:layout_constraintStart_toStartOf="parent" />

        <TextView
                android:id="@+id/exp_tv"
                android:layout_width="128dp"
                android:layout_height="22dp"
                android:text="DENEMEDENEMEDENEM"
                android:textSize="10sp"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.023"
                app:layout_constraintStart_toEndOf="@+id/imagev"
                app:layout_constraintTop_toBottomOf="@+id/title_tv"
                app:layout_constraintVertical_bias="1.0"
                tools:ignore="MissingConstraints" />

        <ImageView
                android:id="@+id/imagev"
                android:layout_width="46dp"
                android:layout_height="31dp"
                tools:src="@drawable/euro"

                tools:ignore="MissingConstraints"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/title_tv"
                android:layout_marginStart="12dp" />

        <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.934"
                app:layout_constraintStart_toEndOf="@+id/title_tv"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints,VectorDrawableCompat" />

        <TextView
                android:id="@+id/cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="$ 725"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="35dp"
                app:layout_constraintStart_toEndOf="@+id/exp_tv"
                android:layout_marginStart="60dp"
                app:layout_constraintEnd_toStartOf="@+id/imageButton" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView >
