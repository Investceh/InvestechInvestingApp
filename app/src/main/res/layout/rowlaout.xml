<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:id="@+id/cardview"
        android:layout_margin="10dp"
        android:elevation="10dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg6"
            android:orientation="vertical"
            android:padding="5dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/title_tv"
                    android:layout_width="183dp"
                    android:layout_height="23dp"
                    tools:text="Android Studio Cardview"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    tools:layout_editor_absoluteY="16dp"
                    app:layout_constraintEnd_toEndOf="@+id/exp_tv"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints" />

            <TextView
                    android:id="@+id/exp_tv"
                    android:layout_width="128dp"
                    android:layout_height="22dp"
                    android:text="DENEMEDENEMEDENEM"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.023"
                    app:layout_constraintStart_toEndOf="@+id/imagev"
                    app:layout_constraintTop_toBottomOf="@+id/title_tv"
                    app:layout_constraintVertical_bias="1.0"
                    tools:ignore="MissingConstraints" />

            <TextView
                    android:id="@+id/cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="$ 725"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteY="35dp"
                    app:layout_constraintStart_toEndOf="@+id/exp_tv"
                    android:layout_marginStart="60dp"
                    app:layout_constraintEnd_toStartOf="@+id/imageButton" />

            <ImageView
                    android:id="@+id/imagev"
                    android:layout_width="46dp"
                    android:layout_height="31dp"
                    tools:src="@drawable/euro"

                    tools:ignore="MissingConstraints"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/title_tv"
                    android:layout_marginStart="12dp" />

        </LinearLayout>
        <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/expandableView"
                android:layout_margin="10dp"
                android:orientation="vertical">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="asdfasdfasdfasdf"
                    android:textSize="10dp">
            </TextView>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView >
