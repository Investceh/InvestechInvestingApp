<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ParaTransferi"
        android:orientation="vertical"
        android:background="#f5f5f5">

    <TextView
            android:id="@+id/para_transfer"
            android:text="PARA TRANSFER"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:background="@drawable/screen_title" />

        <LinearLayout
                android:id="@+id/options"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal"
                android:layout_below="@+id/para_transfer"
                android:background="#f5f5f5"
                android:paddingTop="30dp">

            <TextView
                    android:id="@+id/arama"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Transfer seçeneği"
                    android:textColorHint="@color/black"
                    android:textColor="#BF000000"
                    android:paddingLeft="10dp"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp" />


            <Spinner
                    android:id="@+id/spin"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:entries="@array/options"
                    android:background="#b3b1b2">

            </Spinner>

        </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Miktar"
                android:textColor="@color/black">

        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="Tamam"
            android:layout_alignParentBottom="false"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="71dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="131dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="130dp"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:fontFamily="@font/inter"
            android:textStyle="bold"
            android:layout_below="@+id/layout_form"
            android:layout_centerInParent="true" />

    </LinearLayout>

</LinearLayout>